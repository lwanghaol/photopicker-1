        <activity
            android:name="com.zhaoyun.com.zhaoyun.photopicker.PhotoPickerActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.zhaoyun.com.zhaoyun.photopicker.PreviewActivity"
            android:screenOrientation="portrait" >
        </activity>
